{
  "name": "user-management-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "api:start": "ts-node -r tsconfig-paths/register apps/api/src/index.ts",
    "dev": "concurrently \"npm run watch\" \"nodemon --watch 'apps/api/src/**/*.ts' --exec 'npm run api:start'\"",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}